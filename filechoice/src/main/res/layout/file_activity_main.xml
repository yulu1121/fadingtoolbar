<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
  >
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >
       <android.support.v7.widget.Toolbar
           android:layout_width="match_parent"
           android:layout_height="@dimen/dimen_40_dip"
           android:background="#FF00"
           android:id="@+id/file_toolbar"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="文件列表"
               android:layout_gravity="center"
               android:gravity="center"
               android:textSize="16sp"
               android:textColor="#FFF"
               />

           <RadioButton
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:button="@null"
               android:layout_gravity="end"
               android:layout_marginEnd="@dimen/dimen_15_dip"
               android:drawableEnd="@drawable/pg_more_menu"
               android:onClick="moreMenu"
               />
       </android.support.v7.widget.Toolbar>
       <android.support.v7.widget.RecyclerView
           android:id="@+id/list"
           android:layout_below="@id/file_toolbar"
           android:paddingStart="@dimen/dimen_5_dip"
           android:paddingEnd="@dimen/dimen_5_dip"
           android:background="#fff"
           android:paddingTop="@dimen/dimen_5_dip"
           android:paddingBottom="@dimen/dimen_5_dip"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           />
       <RadioButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:button="@null"
           android:onClick="back"
           android:layout_centerInParent="true"
           android:layout_alignParentStart="true"
           android:layout_gravity="start"
           android:drawableStart="@drawable/svg_left_back_blur"
           />
    </RelativeLayout>
    <ListView
        android:id="@+id/right_list"
        android:layout_width="240dp"
        android:layout_marginTop="40dp"
        android:paddingStart="@dimen/dimen_5_dip"
        android:background="#fff"
        android:paddingEnd="@dimen/dimen_5_dip"
        android:divider="@null"
        android:layout_gravity="end"
        android:layout_height="match_parent"
        />
</android.support.v4.widget.DrawerLayout>